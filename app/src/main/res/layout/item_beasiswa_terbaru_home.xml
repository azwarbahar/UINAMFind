<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_beasiswa_terbaru_home"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/header_lembaga_default" />

        <View
            android:id="@+id/view_item_beasiswa_terbaru_home"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/img_beasiswa_terbaru_home"
            android:background="@color/grey_hint" />

        <TextView
            android:id="@+id/tv_judul_beasiswa_terbaru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_item_beasiswa_terbaru_home"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Beasiswa Bank Indonesia"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ic_domine_item_beasiswa_terbaru"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@id/tv_judul_beasiswa_terbaru"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_domain"
            app:tint="@color/grey_hint" />

        <TextView
            android:id="@+id/tv_nama_kantor_beasiswa_terbaru_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ic_domine_item_beasiswa_terbaru"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/ic_domine_item_beasiswa_terbaru"
            android:gravity="bottom"
            android:text="Bank Indonesia"
            android:textColor="@color/grey_hint"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_tanggal_akhir_beasiswa_terbaru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_kantor_beasiswa_terbaru_item"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Sampai : 20 Mei 2022"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>