<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_header_organisasi_item"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@color/colorPrimary" />

        <RelativeLayout
            android:id="@+id/rl_photo_item_organisasi"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/img_header_organisasi_item"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/circle_white">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardCornerRadius="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/img_photo_item_organisasi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_man_photo_default" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_nama_item_organisasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_header_organisasi_item"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/rl_photo_item_organisasi"
            android:text="Nama Organisasi"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_jenis_item_organisasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_item_organisasi"
            android:layout_alignLeft="@id/tv_nama_item_organisasi"
            android:layout_marginTop="5dp"
            android:text="Teknologi Informasi"
            android:textColor="@color/grey_hint"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>