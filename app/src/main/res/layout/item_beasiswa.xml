<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_logo_perusahaan_item_beasiswa"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lembaga_default" />

        <TextView
            android:id="@+id/tv_judul_item_beasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/img_logo_perusahaan_item_beasiswa"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Internship Kalla"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll1_beasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_judul_item_beasiswa"
            android:layout_alignLeft="@id/tv_judul_item_beasiswa"
            android:layout_marginTop="3dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_domain"
                app:tint="@color/white4" />

            <TextView
                android:id="@+id/tv_nama_perusahaan_item_beasiswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Nama Perusahaan"
                android:textColor="@color/white4"
                android:textSize="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_desc_item_beasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll1_beasiswa"
            android:layout_alignLeft="@id/tv_judul_item_beasiswa"
            android:layout_marginTop="6dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/grey_hint"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_tanggal_tayang_item_beasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_desc_item_beasiswa"
            android:layout_alignLeft="@id/tv_judul_item_beasiswa"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Tanggal Tayang : 20 Jan 2022"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>