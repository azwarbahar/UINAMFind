<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_akun"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_header_recruiter"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/header_mahasiswa_default" />

                <RelativeLayout
                    android:id="@+id/rl_photo_recruiter"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/img_header_recruiter"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="-60dp"
                    android:background="@drawable/circle_white">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        app:cardCornerRadius="47dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white">

                            <ImageView
                                android:id="@+id/img_photo_recruiter"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_man_photo_default" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_nama_recruiter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_photo_recruiter"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="xxxxxxxxxx xxxxxxxx" />

                <TextView
                    android:id="@+id/tv_motto_recruiter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_nama_recruiter"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textSize="14sp"
                    tools:text="HRD At PT Jaya Abadi Selamanya" />

                <TextView
                    android:id="@+id/tv_lokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_motto_recruiter"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    tools:text="Makassar" />

                <LinearLayout
                    android:id="@+id/ll1_detail_recruiter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_lokasi"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:id="@+id/rl_edit_profil_recruiter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_primary_corner_6"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Edit Profil"
                            android:textColor="@color/white" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_pengaturan_recruiter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_primary_corner_6"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Pengaturan"
                            android:textColor="@color/white" />

                    </RelativeLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_perusahaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll1_detail_recruiter"
                    android:layout_marginTop="16dp"
                    app:cardElevation="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="16dp">

                        <TextView
                            android:id="@+id/tv1_perusahaan_akun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="12dp"
                            android:text="Perusahaan"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_belum_diatur_perusahaan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv1_perusahaan_akun"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="Belum diatur"
                            android:textColor="@color/main_blue_color"
                            android:textStyle="italic" />

                        <RelativeLayout
                            android:id="@+id/rl_perusahaan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv1_perusahaan_akun">

                            <ImageView
                                android:id="@+id/img_edit_perusahaan"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginHorizontal="12dp"
                                android:src="@drawable/ic_baseline_edit_24"
                                app:tint="@color/grey" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_perusahaan_img"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="16dp"
                                app:cardCornerRadius="25dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/circle_primary_trans_10">

                                    <ImageView
                                        android:id="@+id/img_perusahaan_recruiter"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/lembaga_default" />

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/tv_nama_perusahaan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/cv_perusahaan_img"
                                android:layout_marginHorizontal="16dp"
                                android:layout_toRightOf="@id/cv_perusahaan_img"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:text="Telkomsel" />

                            <TextView
                                android:id="@+id/tv_indusrei_perusahaan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_nama_perusahaan"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="3dp"
                                android:layout_toRightOf="@id/cv_perusahaan_img"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                tools:text="Telekomunikasi" />

                            <TextView
                                android:id="@+id/tv_lokasi_perusahaan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_indusrei_perusahaan"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@id/cv_perusahaan_img"
                                android:textColor="@color/grey_hint"
                                android:textSize="14sp"
                                tools:text="Makassar" />

                        </RelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_perusahaan"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:text="Lamaran Baru (0)"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_list_lamaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:layout_marginTop="16dp"
                    app:cardElevation="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_lamabarn_baru_kosong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginVertical="20dp"
                            android:text="Data tidak ada!"
                            android:textColor="@color/grey_hint" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_lamaran_mahasiswa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            tools:itemCount="2"
                            tools:listitem="@layout/item_lamaran_mahasiswa" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_list_loker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_list_lamaran"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    app:cardElevation="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/img_add_loker"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginVertical="10dp"
                            android:layout_marginRight="12dp"
                            android:src="@drawable/ic_baseline_add_24"
                            app:tint="@color/grey" />

                        <TextView
                            android:id="@+id/tv1_list_loker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="12dp"
                            android:text="Postingan Loker (0)"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_loker_recruiter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv1_list_loker"
                            android:layout_marginTop="5dp"
                            tools:itemCount="2"
                            tools:listitem="@layout/item_loker_recruiter" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>