<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp">

    <ImageView
        android:id="@+id/img_sekolah_item_pendidikan"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_primary_trans_10"
        android:padding="12dp"
        android:src="@drawable/ic_toga" />

    <TextView
        android:id="@+id/tv_nama_sekolah_item_pendidikan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_toRightOf="@id/img_sekolah_item_pendidikan"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="UIN Alauddin Makassar"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_nama_kantor_item_pendidikan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nama_sekolah_item_pendidikan"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/img_sekolah_item_pendidikan"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="CV. UINAM Find"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nama_kantor_item_pendidikan"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_sekolah_item_pendidikan"
        android:text="2016 - 2022"
        android:textColor="@color/grey_hint"
        android:textSize="12sp" />

</RelativeLayout>