<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="12dp"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:background="@drawable/bg_primary_trans_corner_8">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_primary_trans_10">

            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_man_photo_default" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_nama_lamaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cv_img_photo"
        android:layout_marginHorizontal="16dp"
        android:layout_toRightOf="@id/cv_img_photo"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Staff Admin"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_nama_mahasiswa"
        android:layout_alignLeft="@id/tv_nama_lamaran"
        android:layout_below="@id/tv_nama_lamaran"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:text="Muhammad Azwar bahar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_status"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:textSize="12sp"
        android:layout_alignLeft="@id/tv_nama_lamaran"
        android:layout_below="@id/tv_nama_mahasiswa"
        android:textColor="@color/white"
        android:background="@drawable/bg_primary_corner_6"
        android:text="New"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_status"
        android:layout_alignBottom="@id/tv_status"
        android:layout_marginHorizontal="10dp"
        android:layout_toRightOf="@id/tv_status"
        android:gravity="center_vertical"
        android:text="1 Nov 2022"
        android:textColor="@color/grey_hint"
        android:textSize="10sp" />

</RelativeLayout>