<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_header_card_item_mahasiswa"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/header_mahasiswa_default" />

        <RelativeLayout
            android:id="@+id/rl_photo_card_item_mahasiswa"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/img_header_card_item_mahasiswa"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/circle_white">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                app:cardCornerRadius="23dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/img_photo_card_item_mahasiswa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_man_photo_default" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_nama_card_item_mahasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_photo_card_item_mahasiswa"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Muhammad Azwar Bahar"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_motto_card_item_mahasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_card_item_mahasiswa"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Hafidz 30 Jus | Imam Masjid di Masjid Cheng Ho | Software Engineer | Backend Ktor/Spring"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_jurusan_card_item_mahasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_motto_card_item_mahasiswa"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_icon_jurusan_item_mahasiswa"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_icon_jurusan"
                app:tint="@color/grey_hint" />


            <TextView
                android:id="@+id/tv_jurusan_card_item_mahasiswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_motto_card_item_mahasiswa"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@id/img_icon_jurusan_item_mahasiswa"
                android:text="Sistem Informasi, Sains dan Teknologi"
                android:textColor="@color/grey_hint"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll1_card_item_mahasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_jurusan_card_item_mahasiswa"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_location_alt_fill"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_lokasi_card_item_mahasiswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Makassar, Indonesia"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_bacl_logo_card"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_below="@id/img_header_card_item_mahasiswa"
            android:layout_alignBottom="@+id/ll1_card_item_mahasiswa"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitEnd"
            android:src="@drawable/logo_uinam_info" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>