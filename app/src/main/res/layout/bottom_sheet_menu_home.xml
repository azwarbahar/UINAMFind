<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/continer_bottom_sheet_menu_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_corner_top_20"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
        android:id="@+id/view1_continer_bottom_sheet_menu_home"
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_primary_corner_16" />

    <View
        android:id="@+id/view2_continer_bottom_sheet_menu_home"
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:layout_below="@+id/view1_continer_bottom_sheet_menu_home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_primary_corner_16" />

    <TextView
        android:id="@+id/tv1_continer_bottom_sheet_menu_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2_continer_bottom_sheet_menu_home"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/semua_menu"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/ll_mahasiswa_bottom_sheet_menu_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1_continer_bottom_sheet_menu_home"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_icon_mahasiswa_bottom_sheet_menu_home"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_menu_mahasiswa" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_mahasiswa_menu_bottom_sheet_menu_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="14sp"
            android:layout_toRightOf="@id/cv_icon_mahasiswa_bottom_sheet_menu_home"
            android:text="Mahasiswa dan Alumni"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/ic_baseline_chevron_right_24"
            app:tint="@color/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/cv_icon_mahasiswa_bottom_sheet_menu_home"
            android:layout_marginTop="6dp"
            android:background="@color/white2" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_lembaga_bottom_sheet_menu_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_mahasiswa_bottom_sheet_menu_home"
        android:layout_marginTop="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_icon_lembaga_bottom_sheet_menu_home"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_menu_lembaga" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_nama_menu_bottom_sheet_menu_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="14sp"
            android:layout_toRightOf="@id/cv_icon_lembaga_bottom_sheet_menu_home"
            android:text="Lembaga Kampus"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/ic_baseline_chevron_right_24"
            app:tint="@color/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/cv_icon_lembaga_bottom_sheet_menu_home"
            android:layout_marginTop="6dp"
            android:background="@color/white2" />

    </RelativeLayout>


</RelativeLayout>