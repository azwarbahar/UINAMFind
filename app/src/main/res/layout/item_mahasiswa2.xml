<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_header_item_mahasiswa2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/header_mahasiswa_default" />

        <ImageView
            android:id="@+id/img_lable_item_mahasiswa2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_lable_alumni" />

        <RelativeLayout
            android:id="@+id/rl_photo_item_mahasiswa2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/img_header_item_mahasiswa2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-40dp"
            android:background="@drawable/circle_white">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardCornerRadius="35dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/img_photo_item_mahasiswa2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_man_photo_default" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_nama_item_mahasiswa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_photo_item_mahasiswa2"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Ray Cemerlang" />

        <LinearLayout
            android:id="@+id/ll_jurusan_item_mahasiswa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_item_mahasiswa2"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_domain" />

            <TextView
                android:id="@+id/tv_jurusan_item_mahasiswa2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="Ilmu Hadits" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_motto_item_mahasiswa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_jurusan_item_mahasiswa2"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Hafidz 30 Jus | Imam Masjid di Masjid Cheng Ho" />

        <View
            android:id="@+id/view_item_mahasiswa2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_motto_item_mahasiswa2"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_pesan_item_mahasiswa2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_item_mahasiswa2"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="Pesan"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>